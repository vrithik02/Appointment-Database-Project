<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.appointmentProject.desktop.controller.MedicationEditController"
      alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">

    <Label text="Edit Medication" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField"/>
    <TextField fx:id="strengthField"/>
    <TextField fx:id="typeField"/>
    <TextField fx:id="consumptionField"/>

    <Label fx:id="messageLabel" textFill="red"/>

    <HBox spacing="10">
        <Button text="Save Changes" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
