<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.ManagePatientController">

    <Label text="Manage Patients" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- TABLE -->
    <TableView fx:id="patientTable" prefHeight="300" prefWidth="700">
        <columns>

            <TableColumn fx:id="idCol" text="ID" prefWidth="70"/>
            <TableColumn fx:id="firstNameCol" text="First Name" prefWidth="120"/>
            <TableColumn fx:id="lastNameCol" text="Last Name" prefWidth="120"/>
            <TableColumn fx:id="dobCol" text="DoB" prefWidth="120"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="160"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="120"/>

        </columns>
    </TableView>

    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>

    <Button fx:id="createPatientButton"
            text="Create Patient"
            onAction="#handleCreatePatient"
            style="-fx-font-size: 16px; -fx-padding: 8 20;" />

    <!-- NEW VIEW BUTTON -->
    <Button text="View Patient"
            onAction="#handleViewPatient"
            style="-fx-font-size: 16px; -fx-padding: 8 20;" />


    <!-- BACK BUTTON -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Back"
                onAction="#handleBack"
                style="-fx-font-size: 16px; -fx-padding: 8 16;"/>
    </HBox>

</VBox>
