<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.ProviderEditController"
      spacing="12"
      style="-fx-padding: 20;">

    <Label text="Edit Provider"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Label fx:id="messageLabel"
           textFill="red" />

    <TextField fx:id="firstNameField" promptText="First Name" />
    <TextField fx:id="lastNameField" promptText="Last Name" />
    <TextField fx:id="phoneField" promptText="Phone Number" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="specialtyField" promptText="Specialty" />
    <TextField fx:id="addressField" promptText="Address" />

    <HBox spacing="10">
        <Button text="Save Changes"
                onAction="#handleSaveProvider"
                style="-fx-padding: 8 16; -fx-font-size: 16px;" />

        <Button text="Delete Provider"
                onAction="#handleDeleteProvider"
                style="-fx-padding: 8 16; -fx-font-size: 16px; -fx-background-color: #cc0000; -fx-text-fill: white;" />

        <Button text="Back"
                onAction="#handleBack"
                style="-fx-padding: 8 16; -fx-font-size: 16px;" />
    </HBox>

</VBox>
