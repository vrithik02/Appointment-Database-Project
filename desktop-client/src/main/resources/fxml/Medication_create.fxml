<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.appointmentProject.desktop.controller.MedicationCreateController"
      alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">


<Label text="Create Medication" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="strengthField" promptText="Strength (mg)"/>
    <TextField fx:id="typeField" promptText="Type"/>
    <TextField fx:id="consumptionField" promptText="Consumption"/>

    <Label fx:id="messageLabel" textFill="red"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
