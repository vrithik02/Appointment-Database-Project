<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.ViewStaffController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Staff Directory"
           style="-fx-font-size:24px; -fx-font-weight:bold;"/>

    <!-- Search bar -->
    <TextField fx:id="searchField"
               promptText="Search staff..."
               maxWidth="300"/>

    <!-- Message label -->
    <Label fx:id="messageLabel"
           textFill="red"
           style="-fx-font-size:14px;"/>

    <!-- Table -->
    <TableView fx:id="staffTable"
               prefWidth="800"
               prefHeight="400">
        <columns>
            <TableColumn fx:id="firstNameCol" text="First Name" prefWidth="150"/>
            <TableColumn fx:id="lastNameCol" text="Last Name" prefWidth="150"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
            <TableColumn fx:id="specialtyCol" text="Specialty" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Back button -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Back"
                onAction="#handleBack"
                style="-fx-font-size: 16px; -fx-padding: 8 16;"/>
    </HBox>

</VBox>
