<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.NurseCreateController"
      spacing="12"
      style="-fx-padding:20;">

    <Label text="Create Nurse"
           style="-fx-font-size:24px; -fx-font-weight:bold;" />

    <Label fx:id="messageLabel" textFill="red"/>

    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="phoneField" promptText="Phone"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="addressField" promptText="Address"/>

    <HBox spacing="10">
        <Button text="Create" onAction="#handleCreateNurse"
                style="-fx-padding: 8 16; -fx-font-size:16px;" />

        <Button text="Back" onAction="#handleBack"
                style="-fx-padding: 8 16; -fx-font-size:16px;" />
    </HBox>

</VBox>
