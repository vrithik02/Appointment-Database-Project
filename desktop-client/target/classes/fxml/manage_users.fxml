<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.ManageUsersController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 20;">

    <Label text="Manage Users"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchField"
                   promptText="Search users..."
                   style="-fx-font-size: 14px; -fx-padding: 6 10; width: 300;" />
    </HBox>

    <TableView fx:id="usersTable"
               prefWidth="700"
               prefHeight="400">
        <columns>

            <TableColumn fx:id="usernameCol"
                         text="Username"
                         prefWidth="200" />

            <TableColumn fx:id="emailCol"
                         text="Email"
                         prefWidth="250" />

            <TableColumn fx:id="userTypeCol"
                         text="User Type"
                         prefWidth="150" />

        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="15">
        <Button text="Back"
                onAction="#handleBack"
                style="-fx-font-size: 16px; -fx-padding: 8 20;" />
    </HBox>

</VBox>
